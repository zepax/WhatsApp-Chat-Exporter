{
    "name": "Performance Test",
    "description": "Configuración para pruebas de rendimiento con diferentes opciones",
    "platform": "any",
    "scenarios": [
        {
            "name": "memory_efficient",
            "description": "Configuración optimizada para usar menos memoria",
            "options": {
                "stream_json": true,
                "skip_media": true,
                "no_html": true,
                "json_only": true
            }
        },
        {
            "name": "full_featured",
            "description": "Configuración completa con todas las características",
            "options": {
                "output_formats": ["html", "json", "txt"],
                "include_media": true,
                "generate_summary": true,
                "per_chat_json": true,
                "pretty_print": true,
                "experimental_theme": true
            }
        },
        {
            "name": "large_dataset",
            "description": "Configuración para datasets grandes",
            "options": {
                "stream_json": true,
                "split_size": "10MB",
                "parallel_processing": true,
                "cleanup_temp": true
            }
        }
    ],
    "metrics": [
        "execution_time",
        "memory_usage",
        "disk_usage",
        "output_size"
    ]
}