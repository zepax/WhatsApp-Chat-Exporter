# Configuración de Entorno para Pruebas
# Copia este archivo a .env y ajusta los valores según tu configuración

# Configuración general
DEBUG=false
VERBOSE=true

# Configuración de memoria y rendimiento
MAX_MEMORY_MB=1024
DECRYPT_CHUNK_SIZE=1048576
MAX_BRUTEFORCE_WORKERS=10

# Configuración de salida
DEFAULT_OUTPUT_FORMAT=html,json
PRETTY_PRINT_JSON=true
INCLUDE_MEDIA=true
GENERATE_SUMMARY=true

# Configuración de filtros
FILTER_EMPTY_CHATS=true
DEFAULT_TIMEZONE_OFFSET=0

# Configuración de testing
TEST_TIMEOUT=300
KEEP_TEST_OUTPUTS=true
GENERATE_REPORTS=true

# Rutas por defecto (relativas a test_environment/)
ANDROID_DB_PATH=android/databases/msgstore.db
ANDROID_WA_PATH=android/databases/wa.db
ANDROID_MEDIA_PATH=android/WhatsApp
ANDROID_KEY_PATH=android/keys/key

IOS_BACKUP_PATH=ios/backup
IOS_MEDIA_PATH=ios/media

EXPORTED_CHAT_PATH=exported/
OUTPUT_BASE_PATH=output/